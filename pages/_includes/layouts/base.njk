<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
    <title> areed.me | {{ title }}</title>
    <meta name="description" content="{{ description }}" >
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="icon" href="/favicon.png" type="image/x-icon">
  </head>
  <body>
    <header>

    <h1 class="home"><a href="{{ '/' | url }}"> areed.me </a></h1>

    <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"> <a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
    </ul>

    </header>

    <div class="content">
      {{ content | safe }}
    </div>
  </body>
</html>